<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.innovation.platform.system.mapper.ApiAreaMapper">
    
    <resultMap type="ApiArea" id="ApiAreaResult">
        <result property="id"    column="id"    />
        <result property="companyId"    column="company_id"    />
        <result property="companyName"    column="company_name"    />
        <result property="apiCode"    column="api_code"    />
        <result property="province"    column="province"    />
        <result property="citys"    column="citys"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>
	
	<sql id="selectApiAreaVo">
        select id, company_id, company_name, api_code, province, citys, create_time, update_time from tb_api_area
    </sql>
	
    <select id="selectApiAreaList" parameterType="ApiArea" resultMap="ApiAreaResult">
        <include refid="selectApiAreaVo"/>
        <where>  
            <if test="id != null "> and id = #{id}</if>
             <if test="companyId != null "> and company_id = #{companyId}</if>
             <if test="companyName != null  and companyName != '' "> 
             	and company_name like concat('%', #{companyName}, '%')
             </if>
             <if test="apiCode != null  and apiCode != '' "> 
             	and api_code like concat('%', #{apiCode}, '%')
             </if>
             <if test="province != null  and province != '' "> and province = #{province}</if>
             <if test="citys != null  and citys != '' "> and citys = #{citys}</if>
             <if test="createTime != null "> and create_time = #{createTime}</if>
             <if test="updateTime != null "> and update_time = #{updateTime}</if>
         </where>
    </select>
    
    <select id="selectApiAreaById" parameterType="Integer" resultMap="ApiAreaResult">
        <include refid="selectApiAreaVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertApiArea" parameterType="ApiArea">
        insert into tb_api_area
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null  ">id,</if>
			<if test="companyId != null  ">company_id,</if>
			<if test="companyName != null  and companyName != ''  ">company_name,</if>
			<if test="apiCode != null  and apiCode != ''  ">api_code,</if>
			<if test="province != null  and province != ''  ">province,</if>
			<if test="citys != null  and citys != ''  ">citys,</if>
			<if test="createTime != null  ">create_time,</if>
			<if test="updateTime != null  ">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null  ">#{id},</if>
			<if test="companyId != null  ">#{companyId},</if>
			<if test="companyName != null  and companyName != ''  ">#{companyName},</if>
			<if test="apiCode != null  and apiCode != ''  ">#{apiCode},</if>
			<if test="province != null  and province != ''  ">#{province},</if>
			<if test="citys != null  and citys != ''  ">#{citys},</if>
			<if test="createTime != null  ">#{createTime},</if>
			<if test="updateTime != null  ">#{updateTime},</if>
         </trim>
    </insert>
	 
    <update id="updateApiArea" parameterType="ApiArea">
        update tb_api_area
        <trim prefix="SET" suffixOverrides=",">
            <if test="companyId != null  ">company_id = #{companyId},</if>
            <if test="companyName != null  and companyName != ''  ">company_name = #{companyName},</if>
            api_code = #{apiCode},
            <if test="province != null  and province != ''  ">province = #{province},</if>
            <if test="citys != null  and citys != ''  ">citys = #{citys},</if>
            <if test="createTime != null  ">create_time = #{createTime},</if>
            <if test="updateTime != null  ">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

	<delete id="deleteApiAreaById" parameterType="Integer">
        delete from tb_api_area where id = #{id}
    </delete>
	
    <delete id="deleteApiAreaByIds" parameterType="String">
        delete from tb_api_area where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>